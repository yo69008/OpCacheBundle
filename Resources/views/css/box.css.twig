/**
 * Boxes
 */
#memory,
#keys,
#hits,
#scripts,
#opcache {
	overflow-x: hidden;
	overflow-y: auto;
	top: 0;
	height: 0;
	background: #ffffff;
	margin: 0 0 1em 0;
	height: 100%;
	position: relative;
	width: 90%;
	padding: 0 5%;
	box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
#memory,
#keys,
#hits,
#scripts,
#memory:target ~ div,
#keys:target ~ div,
#hits:target ~ div,
#scripts:target ~ div{
	display: none;
}
#memory:target,
#keys:target,
#hits:target,
#scripts:target {
	display: block;
}
#memory h2,
#keys h2,
#hits h2,
#scripts h2,
#opcache h2 {
	position: fixed;
	background: #ffffff;
	width: 62.5%;
	padding: 1em 0 .25em 0;
	font-size: 2.5em;
	z-index: 7;
	overflow: hidden;
	white-space: nowrap;
    text-overflow: ellipsis;
}
