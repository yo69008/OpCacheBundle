/**
 * Portrait
 */
@media all and (orientation: portrait) {
    body {
        font-size: 1em;
    }
    @-webkit-viewport {
        width: device-width;
    }
    @-moz-viewport {
        width: device-width;
    }
    @-ms-viewport {
        width: device-width;
    }
    @-o-viewport {
        width: device-width;
    }
    @viewport {
        width: device-width;
    }
	nav a {
		padding: .5em 0;
		width: 90%;
	}
	nav a:before {
		background: #ffffff;
		padding: 1em 5%;
		text-align: center;
		width: 90%;
	}
	section > div h3 {
		margin: 15vh auto 0;
		height: 40vw;
	    width: 40vw;
	    line-height: 40vw;
	    padding: 1em;
	}
}
