/**
 * Portrait
 */
@media all and (orientation: portrait) {
    body {
        font-size: 1.5em;
    }
    @-webkit-viewport {
        width: device-width;
    }
    @-moz-viewport {
        width: device-width;
    }
    @-ms-viewport {
        width: device-width;
    }
    @-o-viewport {
        width: device-width;
    }
    @viewport {
        width: device-width;
    }
	nav a {
		padding: .5em 0;
		width: 90%;
	}
	nav a:before {
		background: #ffffff;
		padding: 1em 5%;
		text-align: center;
		width: 90%;
	}
}
